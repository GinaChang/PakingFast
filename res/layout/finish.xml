<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/finish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/finish_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/finish_time"
        android:layout_below="@+id/finish_time"
        android:layout_marginTop="83dp"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/finish_dollar"
        android:layout_below="@+id/finish_dollar"
        android:layout_marginTop="97dp"
        android:text="請選擇付款方式："
        android:textSize="28sp" />

      <ImageButton
          android:id="@+id/mc"
          android:layout_width="120dp"
          android:layout_height="66dp"
          android:layout_alignLeft="@+id/pay_way"
          android:layout_below="@+id/pay_way"
          android:layout_marginTop="35dp"
          android:background="@drawable/finish_button2" />

      <ImageButton
          android:id="@+id/visa"
          android:layout_width="120dp"
          android:layout_height="66dp"
          android:layout_alignParentRight="true"
          android:layout_alignTop="@+id/mc"
          android:layout_marginRight="29dp"
          android:background="@drawable/finish_button1" />

</RelativeLayout>
